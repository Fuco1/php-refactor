#!/usr/bin/env php
<?php

include __DIR__ . '/../bootstrap.php';

$parser = new Parser(file_get_contents($argv[2]));
$parser->parse();

switch ($argv[1]) {
    case 'variables':
        $data = json_encode($parser->getVariables());
        break;
    case 'variable':
        $data = json_encode($parser->getVariableAtPoint($argv[3]));
        break;
    case 'functions':
        $data = json_encode($parser->getFunctions());
        break;
}

echo $data;


// Local Variables:
// mode: php
// End:
